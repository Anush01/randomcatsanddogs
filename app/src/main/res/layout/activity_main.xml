<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgyellow"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/catphoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:src="@color/catsblue" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@color/dogsRed"
        android:id="@+id/dogphoto"
        android:layout_toRightOf="@+id/catphoto"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>


    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getsequential"
        android:layout_below="@+id/catphoto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:backgroundTint="#FF0000"
        android:padding="10dp"
        android:text="Get me a cat and a dog sequentially ie. cat then dog"
        android:textAllCaps="false"
        app:cornerRadius="20dp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getparallel"
        android:layout_below="@+id/getsequential"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF0000"
        android:padding="10dp"
        android:text="Get me a cat and a dog in parallel ie. both together"
        android:textAllCaps="false"
        app:cornerRadius="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linkdemo"
        android:layout_below="@+id/getparallel"

        />


</RelativeLayout>